platform :ios do
    desc "IOS Build"
    lane :custom_lane do
        puts "Hello from custom lane"
    end
    lane :Build_process do
        create_keychain(
        name: "build",
        password: "keychain_password",
        unlock: true,
        default_keychain: true,
        timeout: 3600
        )
        match(
            type: "appstore",
            readonly: false,
            app_identifier: "com.nnn.unity.app",
        )
        app_store_connect_api_key(
            key_id: "57PL28L2UY",
            issuer_id: "589f2d4b-6604-4614-9d4c-f35a64052cad",
            key_filepath: "AuthKey_57PL28L2UY.p8" , # base64 encoded key
            is_key_content_base64: true,
            in_house: false # detecting this via ASC private key not currently supported
        )
    end
    desc "Export app"
    lane :build do
        gym(
            project: "unityBlog.xcworkspace",
            scheme: "unityBlog",
            configuration: "Release",
            clean: true,
            export_xcargs: "-allowProvisioningUpdates",
            output_name: "ReleaseApp.ipa"
        )
    end
end